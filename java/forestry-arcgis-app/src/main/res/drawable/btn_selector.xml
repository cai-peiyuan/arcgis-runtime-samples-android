<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#99CCFF" android:endColor="#99CCFF" android:angle="270" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#99CCFF" android:endColor="#99CCFF" android:angle="270" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!--     state_selected -->
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="#99CCFF" android:endColor="#99CCFF" android:angle="270" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape>
            <gradient android:startColor="#5b99ec" android:endColor="#5b99ec" android:angle="0" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>